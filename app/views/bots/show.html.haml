- model_class = Bot
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @bot.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @bot.last_name
%p
  %strong= model_class.human_attribute_name(:photo) + ':'
  %br
  = @bot.photo
%p
  %strong= model_class.human_attribute_name(:friends) + ':'
  %br
  = @bot.friends
%p
  %strong= model_class.human_attribute_name(:followers) + ':'
  %br
  = @bot.followers
%p
  %strong= model_class.human_attribute_name(:token) + ':'
  %br
  = @bot.token
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @bot.active
%p
  %strong= model_class.human_attribute_name(:requests) + ':'
  %br
  = @bot.requests


= link_to t('.back', :default => t("helpers.links.back")), bots_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_bot_path(@bot), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), bot_path(@bot), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

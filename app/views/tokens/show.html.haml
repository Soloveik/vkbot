- model_class = Token
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @token.name
%p
  %strong= model_class.human_attribute_name(:token) + ':'
  %br
  = @token.token


= link_to t('.back', :default => t("helpers.links.back")), tokens_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_token_path(@token), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), token_path(@token), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

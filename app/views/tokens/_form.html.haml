= simple_form_for @token, :html => { :class => 'form-horizontal' } do |f|
  .row
    .col-md-6
      = f.input :name
  .row
    .col-md-12
      = f.input :token
  = f.button :submit, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), tokens_path, :class => 'btn btn-default'
